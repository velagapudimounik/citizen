<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:padding="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrowicon"
            android:layout_toStartOf="@+id/arrowicon"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/disease_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amar"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateOfBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 Feb 2016 | "
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/administered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administred at 3\u00B0C"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/arrowicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/draw_circle_grey">

            <com.drughub.citizen.utils.DrughubIcon
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rotation="270"
                android:text="@string/icon_down_arrow"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

        </FrameLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
