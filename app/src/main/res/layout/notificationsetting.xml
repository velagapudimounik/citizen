<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDecorationLight">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/notify_order"
                android:id="@+id/textView1"
                android:gravity="left|center"
                android:layout_weight="10"/>

            <com.drughub.citizen.utils.DrughubIcon
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="d"
                android:textSize="20dp"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:layout_marginRight="40dp"/>

            <com.drughub.citizen.utils.DrughubIcon
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="e"
                android:textSize="20dp"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/notify_security"
            android:id="@+id/textView2"
            android:gravity="left|center"
            android:layout_weight="10"/>

        <com.drughub.citizen.utils.DrughubIcon
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="d"
            android:textSize="20dp"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="40dp"/>

        <com.drughub.citizen.utils.DrughubIcon
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="e"
            android:textSize="20dp"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/notify_Transaction"
            android:id="@+id/textView3"
            android:gravity="left|center"
            android:layout_weight="10"/>

        <com.drughub.citizen.utils.DrughubIcon
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="d"
            android:textSize="20dp"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="40dp"/>

        <com.drughub.citizen.utils.DrughubIcon
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="e"
            android:textSize="20dp"
            android:layout_gravity="right|center"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/notify_Vachub"
            android:id="@+id/textView4"
            android:gravity="left|center"
            android:layout_weight="10"/>

        <com.drughub.citizen.utils.DrughubIcon
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="d"
            android:textSize="20dp"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="40dp"/>

        <com.drughub.citizen.utils.DrughubIcon
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="e"
            android:textSize="20dp"
