<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:background="#FFFFFF">



      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="2dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp">



          <com.drughub.citizen.utils.DrughubIcon
              android:id="@+id/IVimage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="+"
              android:textSize="40dp"
              android:background="#A9A9A9"
              android:layout_marginTop="5dp"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:paddingTop="3dp"
              android:paddingBottom="3dp"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="10dp"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_vertical"
                android:layout_above="@+id/linear1"
              android:layout_toLeftOf="@+id/LLbook"
            android:layout_toRightOf="@+id/IVimage"
              android:layout_marginLeft="20dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/IVimage"
              android:layout_marginTop="5dp"
              android:text="Dr Raghava"
              android:textStyle="bold"
              />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Available today"
                  android:textColor="#FF5722"/>

          </LinearLayout>


          <LinearLayout
              android:id="@+id/LLbook"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="2dp"
              android:gravity="center"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="3dp"
              android:paddingBottom="3dp"
              android:layout_alignParentRight="true"
              android:background="@color/colorPrimary">

          <com.drughub.citizen.utils.DrughubIcon
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="3"
              android:padding="3dp"
              android:layout_gravity="center"
              android:textSize="25sp"
              android:textColor="#FFFFFF"
             />


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Book"
                  android:textSize="12sp"
                  android:layout_marginTop="-5sp"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textColor="#FFFFFF"
                  />

      </LinearLayout>

          <View
              android:id="@+id/view"
              android:layout_width="match_parent"
              android:layout_height="0.25dp"
              android:background="#000000"
              android:layout_marginTop="10dp"
              android:layout_below="@+id/IVimage"/>


          <LinearLayout
              android:id="@+id/linear1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@+id/view"
              android:layout_marginTop="5dp"
              android:paddingLeft="8dp"
                android:gravity="center_vertical"
              android:layout_marginBottom="30dp"
              android:orientation="horizontal">


              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:textSize="12sp"
                  android:text="MD.DCH | Dermatologist | Experience : 15Yrs"/>

          </LinearLayout>


          <View
              android:id="@+id/view1"
              android:layout_width="match_parent"
              android:layout_height="0.25dp"
              android:background="#000000"
              android:layout_alignBottom="@+id/linear1"
               />


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="3"
              android:layout_below="@+id/view1"
              >

              <com.drughub.citizen.utils.DrughubIcon
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="a"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/colorPrimary"
                  android:layout_marginLeft="15dp"
                  />

            <TextView
                android:id="@+id/kms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02 kms"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                />

              <com.drughub.citizen.utils.DrughubIcon
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=";"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="40dp"
                  android:textColor="@color/colorPrimary"
            />

              <TextView
                  android:id="@+id/percent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="89%"
                  android:textAlignment="center"
                  android:layout_gravity="center_vertical"
                  />


              <com.drughub.citizen.utils.DrughubIcon
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/icon_dollor"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="40dp"
                  android:textColor="@color/colorPrimary"
                   />

              <TextView
                  android:id="@+id/amount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="$450"
                  android:textAlignment="center"
                  android:layout_gravity="center_vertical"

                  />



          </LinearLayout>



      </RelativeLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>
