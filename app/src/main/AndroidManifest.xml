<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drughub.citizen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:name="com.drughub.citizen.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.drughub.citizen.login.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.drughub.citizen.login.LoginActivity" />

        <activity android:name="com.drughub.citizen.myprofile.MyProfileActivity" />

        <activity android:name="com.drughub.citizen.MainActivity" android:windowSoftInputMode="adjustNothing" />

        <activity android:name="com.drughub.citizen.myfamily.PatientVaccineScheduleActivity" />

        <activity android:name="com.drughub.citizen.orangewallet.OrangeWalletActivity" />

        <activity android:name="com.drughub.citizen.orangewallet.SaveCard" />

        <activity  android:name="com.drughub.citizen.myfamily.VaccinationScheduleActivity" />

        <activity android:name="com.drughub.citizen.notifications.NotificationActivity" />

        <activity android:name="com.drughub.citizen.notifications.NotificationsettingActivity" />

        <activity android:name="com.gun0912.tedpicker.ImagePickerActivity" android:screenOrientation="portrait" />

        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />

        <activity android:name="com.drughub.citizen.patientrecords.PatientRecordActivity" android:windowSoftInputMode="adjustNothing" />

        <activity android:name="com.drughub.citizen.patientrecords.BookmarkedActivity" android:windowSoftInputMode="adjustNothing" />

        <activity android:name="com.drughub.citizen.orangeconnect.OrangeConnectActivity" />

        <activity android:name="com.drughub.citizen.AboutActivity" />

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

    </application>

</manifest>
